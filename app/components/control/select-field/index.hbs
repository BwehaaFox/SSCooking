<div class='field'>
  {{#if @label}}
    <label class='label'>{{@label}}</label>
  {{/if}}

  <div class='control'>
    <div class='select'>
      {{#if @is_search_enabled}}
        <div
          class='dropdown {{if this.open_select "is-active"}}'
          {{did-insert this.registerSelect}}
        >
          <div class='dropdown-trigger'>
            <button
              class='button'
              aria-haspopup='true'
              aria-controls='dropdown-menu2'
              {{on 'click' (fn this.toggleSelect null)}}
            >
              <span> {{this.options_select_value}} </span>
              <span class='icon is-small'>
                <i class='fas fa-angle-down' aria-hidden='true'></i>
              </span>
            </button>
          </div>
          <div class='dropdown-menu' id='dropdown-menu2' role='menu'>
            <div class='dropdown-content'>
              <div style='padding: 10px 5px'>
                <Control::TextField
                  @onInput={{set this.search}}
                  @placeholder='Поиск'
                />
              </div>

              <div style='max-height: 400px; overflow-y:auto'>
                {{#each this.filtered_values key='@index' as |item|}}
                  <div
                    class='dropdown-item'
                    {{on 'click' (fn this.selectValue item)}}
                  >
                    {{or item.locale item}}
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      {{else}}
        <select {{on 'change' this.onChange}}>
          {{#each this.filtered_values key='@index' as |item|}}
            {{!-- {{log 'item' item}} --}}
            <option
              name={{get item @idKey}}
              selected={{if @idKey (eq @value.id item.id) (eq @value item)}}
            >{{or (get item @nameKey) item}}</option>
          {{/each}}
        </select>
      {{/if}}

    </div>
  </div>
</div>