<div class='card' ...attributes>
  {{#if @title}}

    <header class='card-header'>
      <p
        class='card-header-title'
        style='margin-bottom: 0'
        {{on 'click' (optional @titleClick)}}
      >
        {{@title}}
      </p>
      {{#if (has-block 'title')}}
        {{yield to='title'}}
      {{/if}}
    </header>
  {{/if}}
  {{#unless @disabled_content}}
    {{#if (or (has-block) (has-block 'content'))}}

      <div class='card-content'>
        <div class='content'>
          {{#if (has-block 'content')}}
            {{yield to='content'}}
          {{else}}
            {{yield}}
          {{/if}}
        </div>
      </div>
    {{/if}}
  {{/unless}}
  {{#if (has-block 'footer')}}
    <footer class='card-footer'>

      {{yield (component 'ui/button' class='card-footer-item') to='footer'}}

    </footer>
  {{/if}}
</div>